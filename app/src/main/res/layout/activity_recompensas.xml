<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uaq.HUMUI.Activities.categorias.educacionActivity"
    android:background="#993366">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/relativeLayout1">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/iconos_mpadis"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIENES UN RECORD DE"
                android:id="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-,-"
                    android:id="@+id/textView1"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" MPADIS"
                    android:id="@+id/textView2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView1"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:background="#CC6699"
                android:id="@+id/relativeLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LISTA DE RECOMPENSAS"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView5"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />

                <TextView android:id="@+id/child1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="  ELECTRÓNICOS  "
                    android:background="@drawable/btn_retos"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"/>

                <TextView android:id="@+id/child2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="  ARTÍCULOS UAQ  "
                    android:background="@drawable/btn_retos"
                    android:layout_below="@+id/child1"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"/>

                <TextView android:id="@+id/child3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="  ESCOLARES  "
                    android:background="@drawable/btn_retos"
                    android:layout_below="@+id/child2"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"/>

                <TextView android:id="@+id/child4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="  LIBROS  "
                    android:background="@drawable/btn_retos"
                    android:layout_below="@+id/child3"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/relativeLayout4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRACIAS POR TUS ACCIONES"
                    android:id="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="30dp" />

            </RelativeLayout>
        </RelativeLayout>

        <!--    CATEGORIA ELECTRONICOS       -->
        <include
            android:id="@+id/container_electronicos"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            layout="@layout/xml_electronicos"
            android:layout_below="@+id/relativeLayout1"
            />
    </RelativeLayout>

</ScrollView>
